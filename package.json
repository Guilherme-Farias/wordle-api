{
  "name": "wordle-api",
  "version": "1.0.0",
  "license": "ISC",
  "author": "Guilherme Farias",
  "description": "A Wordle API clone",
  "homepage": "https://github.com/Guilherme-Farias/wordle-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Guilherme-Farias/wordle-api.git"
  },
  "bugs": {
    "url": "https://github.com/Guilherme-Farias/wordle-api/issues"
  },
  "keywords": [
    "wordle",
    "api",
    "game"
  ],
  "scripts": {
    "start:dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsup src --out-dir dist",
    "lint": "eslint . --fix --max-warnings=0",
    "test:unit": "vitest run **/*.spec.ts",
    "test:unit:watch": "vitest **/*.spec.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "8.4.1",
    "@types/node": "20.14.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.12.0",
    "@typescript-eslint/parser": "7.12.0",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "1.6.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "prettier": "3.3.0",
    "supertest": "7.0.0",
    "tsup": "8.1.0",
    "tsx": "4.11.2",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0",
    "vitest-mock-extended": "1.3.1"
  }
}
